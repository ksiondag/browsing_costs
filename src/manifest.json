{
    "manifest_version": 2,
    "name": "Browsing Costs",
    "description": "Productivity tools to help user not go to waste-of-time sites.",
    "version": "0.1",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": "action/icon.png",
        "default_popup": "action/popup.html",
        "default_title": "Add site as expense"
    },
    "background": {
        "scripts": ["shared.js", "background/trackSpending.js"],
        "persistent": false
    },
    "options_ui": {
        "page": "options/options.html",
        "chrome_style": true
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": [
                "lib/react-15.1.0.js",
                "lib/react-dom-15.1.0.js",
                "content.js"
            ],
            "run_at": "document_start"

        }
    ],
    "permissions": [
        "alarms",
        "storage",
        "tabs",
        "*://*/*"
    ]
}
